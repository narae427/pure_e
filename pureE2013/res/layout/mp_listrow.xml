<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"  
 	android:orientation="horizontal"
 	>
 	<ImageView 
 		android:id="@+id/mp_iconItem"  
  		android:layout_width="70dp" 
  		android:layout_height="70dp"
  		android:padding="8dp"
  		android:layout_gravity="center_vertical"
  		/>

  	<LinearLayout
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_alignParentLeft="true"
  	    android:orientation="vertical" >

	 	
		<RelativeLayout
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:padding="5dp"
			
			
 			>

 			<TextView
 			    android:id="@+id/mp_dataItem01"
 			    android:layout_width="wrap_content"
 			    android:layout_height="wrap_content"
 			    android:padding="5dp"
 			    android:textColor="#ffffffff"
 			    android:textSize="20dp"
 			    android:textStyle="bold" />

 			<TextView
 			    android:id="@+id/mp_dataItem02"
 			    android:layout_width="wrap_content"
 			    android:layout_height="wrap_content"
 			    android:layout_toRightOf="@+id/mp_dataItem01"
 			    android:padding="10dp"
 			    android:paddingRight="10dp"
 			    android:textColor="#ffffffff"
 			    android:textSize="14dp" />
 			
 			<RatingBar
 			    android:id="@+id/ratingbar"
 			    style="@style/StoreBigRatingBar"
 			    android:layout_width="100dip"
 			    android:layout_height="11dip"
 			    android:layout_below="@+id/mp_dataItem01"
 			    android:layout_marginTop="8dip"
 			    android:numStars="100"
 			    android:rating="0"
 			    android:stepSize="0.5"
 			    android:isIndicator="true" />

 		</RelativeLayout>  
 		 
	</LinearLayout>
	
  	<RelativeLayout 
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_alignParentRight="true"
  	    android:orientation="horizontal"
  	    android:layout_gravity="center" >
 	</RelativeLayout>
    
</LinearLayout>  
 