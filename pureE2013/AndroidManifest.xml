<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.puree2013"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="9" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        >
        <activity
            android:name="com.example.puree2013.SplashActivity"
            
            android:label="@string/app_name" 
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="Tab1_List"
            android:screenOrientation="portrait"></activity>
        <activity android:name="Tab2_Search"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name="Tab3_Mypage"
            android:screenOrientation="portrait"></activity>
        <activity android:name="Tab4_Help"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name="PlayActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="ResultActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="TestActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="PopupDialog"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity android:name="CountActivity"
            android:theme="@style/Transparent"></activity>
        <activity android:name="DetailActivity"></activity>
        
       
    </application>

</manifest>